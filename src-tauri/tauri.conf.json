{
  "productName": "ripleyflow-app",
  "version": "0.1.0",
  "identifier": "com.ripleyflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RipleyFlow",
        "width": 1200,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 700,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: data: blob:; media-src 'self' asset: data: blob: file:; img-src 'self' asset: data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/384x384.png",
      "icons/512x512.png"
    ],
    "resources": [
      "binaries/ffmpeg/ffmpeg.exe",
      "binaries/deep-filter/deep-filter.exe"
    ]
  },
  "plugins": {}
}

